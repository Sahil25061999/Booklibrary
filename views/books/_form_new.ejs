<div>
  <label>Title</label>
  <input name="title" type="text" value="<%= book.title %>" />
</div>
<div>
  <label>Author</label>
  <select name="author">
    <% authors.forEach(author=>{ %> <% if(author.id ===book.author){ %>
    <option selected label="<%= author.name %>" value="<%= author.id %>">
      <% } else { %>
    </option>

    <option label="<%= author.name %>" value="<%= author.id %>">
      <% } %> <% }) %>
    </option>
  </select>
</div>
<div>
  <label>Publish Date</label>
  <input name="publishDate" type="date" value="<%= book.publishDate == null ? ""
  : book.publishDate.toISOString().split('T')[0] %>" />
</div>
<div>
  <label>Page Count</label>
  <input name="pageCount" type="number" value="<%= book.pageCount %>" />
</div>
<div>
  <label>Cover</label>
  <input name="cover" type="file" class="filepond" />
</div>
<div>
  <label>Description</label>
  <textarea name="description"><%=book.description %></textarea>
</div>
